@model Order;


<div class="container-md" > 
 <div class="text-danger" asp-validation-summary="All"> </div>
    <form method="post" asp-action="Checkout"> 
       <div class="form-group my-2"> 
            <label class="form-label" asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" />
       </div>
       <div class="form-group my-2"> 
            <label class="form-label" asp-for="Line1">Line 1 </label>
            <input class="form-control" asp-for="Line1" />
       </div>
       <div class="form-group my-2"> 
            <label class="form-label" asp-for="Line2">Line 2 </label>
            <input class="form-control" asp-for="Line2" />
       </div>
       <div class="form-group my-2"> 
            <label class="form-label" asp-for="Line3">Line 3 </label>
            <input class="form-control" asp-for="Line3" />
       </div>
       <div class="form-group my-2"> 
            <label class="form-label" asp-for="City"> City </label>
            <input class="form-control" asp-for="City" />
       </div>
       <div class="form-group my-2"> 
            <input asp-for="GiftWrap" />
            <label class="form-label" asp-for="GiftWrap"> Gift wrap these items.</label>
       </div>
       <div class="d-flex justify-content-center my-2"> 
            <button class="btn btn-primary d-inline-block" type="submit"> Complete Order</button>
       </div>
    </form>

</div>