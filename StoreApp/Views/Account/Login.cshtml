@model LoginModel

<div class="container d-flex justify-content-center">
<div style="width:550px">
 <h6 class="display-6 my-4 text-center"> 
    <i class="fa-solid fa-right-to-bracket rounded-5 p-3 text-white bg-secondary"></i>
    <br/>
    Login 
 </h6>


 <div class="container-md">
    <div class="text-danger" asp-validation-summary="All"> </div>
    <form method="post" asp-action="Login">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group my-3">
            <label class="form-label my-2" asp-for="Name"> </label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group my-3">
            <label class="form-label my-2" asp-for="Password"> </label>
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <div class="form-group my-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary" > 
            <i class="fa-solid fa-right-to-bracket"></i>
            Login</button>
        </div>
     </form>
     <div>
        <p class="text-italique"> If you don't have an account. Please click here to 
        <a asp-action="Register" class="text-primary">
        create your account</a></p>
     </div>
 </div>
</div>
</div> 