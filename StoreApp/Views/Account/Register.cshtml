@model RegisterDto

<div class="container d-flex justify-content-center">
<div style="width:500px">
 <h6 class="display-6 my-4 text-center"> 
    <i class="fa-solid fa-user-plus rounded-5 p-3 text-white bg-secondary"></i>
    <br/>
    Register 
 </h6>


 <div class="container-md">
    <div class="text-danger" asp-validation-summary="All"> </div>
    <form method="post" asp-action="Register">
        <div class="form-group my-3">
            <label class="form-label my-1" asp-for="UserName"> </label>
            <input class="form-control" asp-for="UserName" />
        </div>
        <div class="form-group my-3">
            <label class="form-label my-1" asp-for="Email"> </label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-group my-3">
            <label class="form-label my-1" asp-for="Password"> </label>
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <div class="form-group my-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary" > 
            <i class="fa-solid fa-user-plus"></i>
            Register</button>
        </div>
     </form>
 </div>
</div>
</div> 