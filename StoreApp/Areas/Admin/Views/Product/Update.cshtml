@model ProductDtoForUpdate


<h2 class="display-6 mt-3 text-center">Update</h2>
<div class="container mt-3 ">
    <form method="post" asp-action="Update" >
    <div class="text-danger" asp-validation-summary="All"> </div>
    <div class="form-group my-3"> 
            <label asp-for="CategoryId" class="form-label mb-2">Category Id </label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
            </select>
        </div>
    <input type="hidden" asp-for="ProductId"/>
        <div class="form-group my-3">
            <label asp-for="ProductName" class="form-label mb-2"> Product Name </label>
            <input asp-for="ProductName" class="form-control">
        </div>
         <div class="form-group my-3">
            <label asp-for="Summary" class="form-label mb-2"> Product Summary </label>
            <input asp-for="Summary" class="form-control">
        </div>
        <div class="form-group my-3">
            <label asp-for="Price" class="form-label mb-2"> Price </label>
            <input asp-for="Price" class="form-control">
        </div>
        <div class="form-group my-3">
            <div class="form-check form-switch">
             <input class="form-check-input"asp-for="ShowCase" type="checkbox" role="switch">
             <label class="form-check-label" asp-for="ShowCase">ShowCase</label>
            </div>
        </div>
        <div class="my-3">
            <img src="@Model?.ImageUrl" alt="picture" class="rounded shadow" style="width:200px">
        </div>
        <div class="form-group my-3">
            <label asp-for="ImageUrl" class="form-label mb-2"> Image Url </label>
            <input type="file" name="file" class="form-control" >
        </div>
        <div class="form-group my-3">
        <div class="btn-group"> 
            <button class="btn btn-primary" type="submit"> 
                <i class="fa fa-edit"></i>
                Update 
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i> 
                Products 
            </a>
        </div>
        </div>

    </form>
</div>