@model ProductDtoForInsertion


<h2 class="display-6 mt-3 text-center">CREATE</h2>
<div class="container mt-3 ">
    <form method="post" asp-action="Create" encType="multipart/form-data" >
    <div class="text-danger" asp-validation-summary="All"> </div>
        <div class="form-group my-3"> 
            <label asp-for="CategoryId" class="form-label mb-2">Category Id </label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
            </select>
        </div>
        <div class="form-group my-3">
            <label asp-for="ProductName" class="form-label mb-2"> Product Name </label>
            <input asp-for="ProductName" class="form-control">
        </div>
        <div class="form-group my-3">
            <label asp-for="Summary" class="form-label mb-2"> Product Summary </label>
            <input asp-for="Summary" class="form-control">
        </div>
        <div class="form-group my-3">
            <label asp-for="Price" class="form-label mb-2"> Price </label>
            <input asp-for="Price" class="form-control">
        </div>
        <div class="form-group my-3">
            <label asp-for="ImageUrl" class="form-label mb-2"> Image Url </label>
            <input type="file" name="file"class="form-control">
        </div>
        <div class="form-group my-3">
        <div class="btn-group"> 
            <button class="btn btn-primary" type="submit"> Save
                    <i class="fa-solid fa-floppy-disk"></i>
             </button>
            <a asp-action="Index" class="btn btn-outline-primary" >
                <i class="fa fa-list"></i> 
                Products 
            </a>
        </div>
        </div>

    </form>
</div>


