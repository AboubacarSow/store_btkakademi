@model ResetPasswordDto

<div class="text-center display-6">Reset Password (@Model.UserName) </div>

<div class ="container d-flex justify-content-center">
    <div style="width:450px">
        <div class="text-danger" asp-validate-summary="All" > </div>
        <form method="post" asp-action="RessetPassword">
        <input type="hidden" asp-for="UserName"/>
            <div class="form-group my-3">
                <label asp-for="Password"> </label>
                <input asp-for="Password" class="form-control my-2"/> 
            </div>
            <div class="form-group my-3">
                <label asp-for="ConfirmPassword"> </label>
                <input asp-for="ConfirmPassword" class="form-control my-2"/> 
            </div>
            <div class=" my-3 d-flex justify-content-center">
                <div class="btn-group">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-solid fa-key"> </i>
                   Reset </button> 
                    <a asp-action="Index" class="btn btn-outline-primary" > 
                           <i class="fa fa-solid fa-users"> </i>
                           Users
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>